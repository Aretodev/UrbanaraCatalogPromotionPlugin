<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="urbanara_catalog_promotion.catalog_promotion_rule.is_from_taxon" class="Urbanara\CatalogPromotionPlugin\Rule\IsFromTaxonRuleChecker">
            <tag name="urbanara_catalog_promotion.catalog_promotion_rule" type="is_from_taxon" label="Is from taxon" />
        </service>

        <service id="urbanara_catalog_promotion.catalog_promotion_rule.is_product" class="Urbanara\CatalogPromotionPlugin\Rule\IsProductRuleChecker">
            <tag name="urbanara_catalog_promotion.catalog_promotion_rule" type="is_product" label="Is product" />
        </service>

        <service id="urbanara_catalog_promotion.catalog_promotion_rule.is_product_sku" class="Urbanara\CatalogPromotionPlugin\Rule\IsProductSkuRuleChecker">
            <tag name="urbanara_catalog_promotion.catalog_promotion_rule" type="is_product_sku" label="Is product (multiple SKU)" />
        </service>

        <service id="urbanara_catalog_promotion.catalog_promotion_rule.is_delivery_time_in_scope" class="Urbanara\CatalogPromotionPlugin\Rule\IsDeliveryTimeInScopeRuleChecker">
            <tag name="urbanara_catalog_promotion.catalog_promotion_rule" type="is_delivery_time_in_scope" label="Is delivery time in scope" />
        </service>
    </services>
</container>
