<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="sylius.behat.page.admin.catalog_promotion.create.class">Tests\Acme\SyliusCatalogPromotionBundle\Behat\Page\Admin\CreatePage</parameter>
        <parameter key="sylius.behat.page.admin.catalog_promotion.index.class">Tests\Acme\SyliusCatalogPromotionBundle\Behat\Page\Admin\IndexPage</parameter>
        <parameter key="sylius.behat.page.admin.catalog_promotion.update.class">Tests\Acme\SyliusCatalogPromotionBundle\Behat\Page\Admin\UpdatePage</parameter>
    </parameters>
    <services>
        <service id="acme_sylius_catalog_promotion.behat.context.ui.admin.managing" class="Tests\Acme\SyliusCatalogPromotionBundle\Behat\Context\Ui\Admin\ManagingCatalogPromotionContext">
            <argument type="service" id="acme_sylius_catalog_promotion.behat.page.admin.create" />
            <argument type="service" id="acme_sylius_catalog_promotion.behat.page.admin.index" />
            <argument type="service" id="acme_sylius_catalog_promotion.behat.page.admin.update" />
            <tag name="fob.context_service" />
        </service>

        <service id="acme_sylius_catalog_promotion.behat.context.transform.catalog_promotion" class="Tests\Acme\SyliusCatalogPromotionBundle\Behat\Context\Transform\CatalogPromotionContext">
            <argument type="service" id="__symfony__.acme_sylius_catalog_promotion.repository.catalog_promotion" />
            <tag name="fob.context_service" />
        </service>

        <service id="acme_sylius_catalog_promotion.behat.page.admin.create" class="%sylius.behat.page.admin.catalog_promotion.create.class%" parent="sylius.behat.page.admin.crud.create" public="false">
            <argument type="string">acme_sylius_catalog_promotion_admin_catalog_promotion_create</argument>
        </service>
        <service id="acme_sylius_catalog_promotion.behat.page.admin.index" class="%sylius.behat.page.admin.catalog_promotion.index.class%" parent="sylius.behat.page.admin.crud.index" public="false">
            <argument type="string">acme_sylius_catalog_promotion_admin_catalog_promotion_index</argument>
        </service>
        <service id="acme_sylius_catalog_promotion.behat.page.admin.update" class="%sylius.behat.page.admin.catalog_promotion.update.class%" parent="sylius.behat.page.admin.crud.update" public="false">
            <argument type="string">acme_sylius_catalog_promotion_admin_catalog_promotion_update</argument>
        </service>
    </services>
</container>
